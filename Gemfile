source 'https://rubygems.org'

group :jekyll_plugins do
  # Github Pages support. Forcing v170 due to current windows dependency issue: https://github.com/github/pages-gem/issues/509
  gem 'github-pages', '170'
  # Local admin: https://github.com/jekyll/jekyll-admin
  gem 'jekyll-admin'
  # RSS feed: https://github.com/jekyll/jekyll-feed
  gem 'jekyll-feed'
end

# Windows timezones
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

# Windows directory watcher
gem 'wdm', '>= 0.1.0' if Gem.win_platform?
